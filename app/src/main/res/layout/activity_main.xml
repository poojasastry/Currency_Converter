<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    tools:context="com.example.pooja.assignment1.convert.MainActivity">

    <Button
        android:id="@+id/button"
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:onClick="convertCurrency"
        android:text="@string/convertButton"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/currencyTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/currencyTwo"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/valueOfUSD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/currencyTwo"
        android:ems="10"
        android:layout_below="@+id/button"
        android:layout_marginLeft="20dp"
        android:hint="@string/currencyTwoText"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/currencyOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/currencyTwo"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/currencyOne"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/valueOfINR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/valueOfUSD"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_toRightOf="@+id/currencyOne"
        android:ems="10"
        android:hint="@string/currencyOneText"
        android:inputType="numberDecimal" />

</RelativeLayout>
